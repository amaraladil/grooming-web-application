<center>
     
<div class="backback">
   <h1>Inventory</h1>
<div class="row">

<p id="notice"><%= notice %></p>


<table id=table>
  <thead>
    <tr>
      <th>Inventory ID</th>
      <th>Name</th>
      <th>Price</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tblinventories.each do |tblinventory| %>
      <tr>
        <td><%= tblinventory.inventoryID %></td>
        <td><%= tblinventory.name %></td>
        <td>$<%= tblinventory.price %>.00</td>
        <td><%= tblinventory.quantity %></td>
        <td><%= link_to 'View', tblinventory %></td>
        <td><%= link_to 'Edit', edit_tblinventory_path(tblinventory) %></td>
        <td><%= link_to 'Delete', tblinventory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_tblinventory_path %>

<style>
  #table {
    color: black;
    text-align:center;
    letter-spacing:1.5px;   
    line-height: 1.5;
}

table, th, td {
   border: 1px solid white;
}
</style>


</div>
    
</div>
</center>
